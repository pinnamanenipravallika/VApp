
@model VApp.Models.ListModel
@{
    ViewData["Title"] = "Vaccine";

    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}


<h2> Vaccinated Employee Details</h2>

<hr />
@using (Html.BeginForm(actionName: "Insert", controllerName: "Vaccine", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.VaccineModel.EmpId, htmlAttributes: new { @class = "control-label d-none" })
                @Html.TextBoxFor(model => model.VaccineModel.EmpId, htmlAttributes: new { @class = "form-control d-none" })
            </div>
        </div>
        <div class="row">
            <div class="form-floating mb-3">
                @Html.LabelFor(model => model.VaccineModel.VaccineNameId, new { @class = "control-label" })
                @Html.DropDownListFor(model => model.VaccineModel.VaccineNameId, new SelectList(Model.VaccinationNames, "Id", "Name"), new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.VaccineModel.DoseTypeId, new { @class = "control-label" })
                @Html.DropDownListFor(model => model.VaccineModel.DoseTypeId, new SelectList(Model.DoseTypes, "Id", "DoseType1"), new { @class = "form-select" })
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.VaccineModel.VaccinationDate, new { @class = "control-label" })

                <input type="datetime-local" value="2021-01-01T12:00" />
                @*@Html.DateTime(expression: model => model.VaccineDate, htmlAttributes: new { @class = "form-control" })*@
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.VaccineModel.HospitalName, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(model => model.VaccineModel.HospitalName, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(expression: model => model.VaccineModel.CertificatePath, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(expression: model => model.VaccineModel.CertificatePath, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <input type="submit" value="save" name="Save" class="btn btn-primary" />
            </div>
        </div>



    </div>

}