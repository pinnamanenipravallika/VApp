
@model VApp.Models.ListModel
@{
    ViewData["Title"] = "Vaccine";

    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}


<h2>Enter your Vaccination Details</h2>
<hr />
<div class="row">
    <div class="col-2">

    </div>
    <div class="col-6">
        @using (Html.BeginForm(actionName: "Insert", controllerName: "Vaccine", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.EmpId, htmlAttributes: new { @class = "control-label d-none" })
            @Html.TextBoxFor(model => model.EmpId, htmlAttributes: new { @class = "form-control d-none" })
            <!--<label class="control-label">TempData["empData"]</label>-->
        </div>

        <div class="form-floating mb-3">
            @*Html.LabelFor(model => model.VaccineModel.VaccineNameId, new { @class = "control-label" })<br />*@
            <label class="control-label"> Vaccine Name </label>
            @Html.DropDownListFor(model => model.VaccineModel.VaccineNameId, new SelectList(Model.VaccinationNames, "Id", "Name"), new { @class = "form-control" })
        </div>


        <div class="form-group mb-3">
            @*Html.LabelFor(model => model.VaccineModel.DoseTypeId, new { @class = "control-label" })<br />*@
            <label class="control-label">Dose No.</label>
            @Html.DropDownListFor(model => model.VaccineModel.DoseTypeId, new SelectList(Model.DoseTypes, "Id", "DoseType1"), new { @class = "form-control" })
        </div>

        <div class="form-group mb-3">

            @*Html.LabelFor(model => model.VaccineModel.VaccinationDate, new { @class = "control-label" })<br />*@
            <label class="control-label">Vaccination Date</label>
            <input type="date" asp-for="VaccineModel.VaccinationDate" class="form-control" />
            <span asp-validation-for="VaccineModel.VaccinationDate" class="text-danger"></span>

            @*@Html.DateTime(expression: model => model.VaccineDate, htmlAttributes: new { @class = "form-control" })*@
        </div>

        <div class="form-group mb-3">
            @*Html.LabelFor(model => model.VaccineModel.HospitalName, htmlAttributes: new { @class = "control-label" })*@
            <label class="control-label">Hospital Name</label>
            @Html.TextBoxFor(model => model.VaccineModel.HospitalName, htmlAttributes: new { @class = "form-control" })
            <span asp-validation-for="VaccineModel.HospitalName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">


            <!--Html.LabelFor(expression: model => model.VaccineModel.CertificatePath, htmlAttributes: new { class = "control-label" })<br />-->
            <label class="control-label">Certificate</label>
            @Html.TextBoxFor(expression: model => model.File, htmlAttributes: new { type = "file", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.File, "", new { @class = "error" })
            <span asp-validation-for="File" class="text-danger"></span>

        </div>

            <div class="form-group mb-3">
                <input type="submit" value="save" name="Save" class="btn btn-primary" />
            </div>

        }

    </div>
    <div class="col-4">

    </div>
</div>


