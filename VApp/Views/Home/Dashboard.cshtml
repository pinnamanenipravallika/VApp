
@model VApp.Models.EmployeeDataModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}
<section>
    <div class="row">
        <div class="col-4">
            <h5> Welcome! @Model.FirstName </h5>
        </div>
        <div class="col-8"></div>
    </div>
</section>
<section>
    <div class="row">
        <div class="col-4">
            <div class="list-group" id="list-tab" role="tablist">

                <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">Your Details</a>

                <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">Vaccination Details</a>

                <a class="list-group-item list-group-item-action" id="list-affectedfamily-list" data-toggle="list" href="#list-affectedfamily" role="tab" aria-controls="affectedfamily">Family Affected Details</a>

            </div>
        </div>
        <div class="col-8">
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
                    <div class="row">

                        <div class="col-3">
                            <label for="floatingCode" style="font-weight:bolder" class="bold">Employee Code:</label><br />
                            <label for="firstName" style="font-weight:bolder" class="bold">First Name:</label><br />
                            <label for="lastName" style="font-weight:bolder" class="bold">Last Name:</label><br />
                            <label for="email" style="font-weight:bolder" class="bold">Email address:</label><br />
                            <label for="joiningdate" style="font-weight:bolder" class="bold">Joining Date:</label><br />
                            <label for="mobile" style="font-weight:bolder" class="bold">Mobile No:</label><br />
                            <label for="address" style="font-weight:bolder" class="bold">Address:</label><br />


                        </div>
                        <div class="col-6">
                            <label id="floatingCode"> @Model.Code</label><br />
                            <label id="firstName"> @Model.FirstName</label><br />
                            <label id="lastName">@Model.LastName</label><br />
                            <label id="email">@Model.Email</label><br />
                            <label id="joiningdate">@Model.JoiningDate</label><br />
                            <label id="mobile">@Model.Mobile</label><br />
                            <label id="address">@Model.Address</label><br />
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">

                    <div class="row">
                        <div class="col-3">
                            <p>Vaccine Name</p>
                            <p>Vaccinated Date</p>
                            <p>Dose No</p>
                            <p>Hospital Name</p>

                        </div>
                        @foreach (var item in Model.EmpVaccinationData)
                        {
                            <div class="col-4">
                                <p>@item.VccineName</p>
                                <p>@item.VaccinationDate</p>
                                <p>@item.DoseType</p>
                                <p>@item.HospitalName</p>
                            </div>
                        }
                    </div>

                </div>

                <div class="tab-pane fade" id="list-affectedfamily" role="tabpanel" aria-labelledby="list-affectedfamily-list">

                    <div class="row">
                        <div class="col">
                            <table class="table table-bordered text-primary text-center">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Family Member Name</th>
                                        <th>Is Recovered</th>
                                        <th>Recovery Duration</th>
                                        <th>Relationship</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var family in Model.AffectedFamilyModels)
                                    {
                                        <tr>
                                            <td>@family.MemberName</td>
                                            <td>@family.IsRecoveryed</td>
                                            <td>@family.RecoveryDuration</td>
                                            <td>@family.Relationship.ToUpper()</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>